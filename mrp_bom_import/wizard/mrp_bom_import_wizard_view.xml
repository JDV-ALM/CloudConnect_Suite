<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_mrp_bom_import_wizard_form" model="ir.ui.view">
        <field name="name">mrp.bom.import.wizard.form</field>
        <field name="model">mrp.bom.import.wizard</field>
        <field name="arch" type="xml">
            <form string="Import Bill of Materials">
                <field name="state" invisible="1"/>
                
                <!-- Estado Draft: SelecciÃ³n de archivo -->
                <group invisible="state != 'draft'">
                    <group string="Import Settings">
                        <field name="file_data" filename="file_name" widget="binary" class="oe_inline"/>
                        <field name="file_name" invisible="1"/>
                        <field name="delimiter" class="oe_inline"/>
                    </group>
                    <group string="CSV Format">
                        <div class="text-muted">
                            <p>The CSV file must contain the following columns:</p>
                            <ul class="mb-0">
                                <li><b>bom_code</b>: Unique BoM reference</li>
                                <li><b>product_code</b>: Product code, barcode or External ID</li>
                                <li><b>product_qty</b>: Quantity to produce</li>
                                <li><b>product_uom</b>: Unit of measure</li>
                                <li><b>type</b>: normal or phantom</li>
                                <li><b>component_code</b>: Component code, barcode or External ID</li>
                                <li><b>component_qty</b>: Component quantity</li>
                                <li><b>component_uom</b>: Component UoM</li>
                            </ul>
                        </div>
                    </group>
                </group>
                
                <!-- Estado Done: Resultados exitosos -->
                <div invisible="state != 'done'">
                    <separator string="Import Summary"/>
                    <group>
                        <div class="alert alert-success d-flex align-items-center" role="alert">
                            <i class="fa fa-check-circle fa-2x me-3"/>
                            <div>
                                <h5 class="alert-heading mb-1">Import Successful!</h5>
                                <span><field name="result_message" readonly="1" nolabel="1"/></span>
                            </div>
                        </div>
                    </group>
                    <group col="4">
                        <label for="imported_count" string="Total BoMs imported"/>
                        <div>
                            <field name="imported_count" readonly="1" nolabel="1" class="oe_inline fw-bold"/>
                        </div>
                    </group>
                    
                    <group invisible="not error_message" string="Warnings">
                        <div class="alert alert-warning" role="alert">
                            <field name="error_message" readonly="1" nolabel="1"/>
                        </div>
                    </group>
                </div>
                
                <!-- Estado Error: Mostrar errores -->
                <div invisible="state != 'error'">
                    <separator string="Import Failed"/>
                    <group>
                        <div class="alert alert-danger d-flex align-items-center" role="alert">
                            <i class="fa fa-exclamation-triangle fa-2x me-3"/>
                            <div>
                                <h5 class="alert-heading mb-1">Import Failed!</h5>
                                <span><field name="result_message" readonly="1" nolabel="1"/></span>
                            </div>
                        </div>
                    </group>
                    
                    <group invisible="not error_message" string="Error Details">
                        <field name="error_message" readonly="1" nolabel="1" style="white-space: pre-wrap; background-color: #f8f9fa; padding: 10px; border-radius: 5px;"/>
                    </group>
                </div>
                
                <footer>
                    <button name="action_import" string="Import" type="object" 
                            class="btn-primary" data-hotkey="q" invisible="state != 'draft'"/>
                    <button name="action_download_template" string="Download Template" type="object" 
                            class="btn-secondary" invisible="state != 'draft'"/>
                    <button name="action_view_boms" string="View BoMs" type="object" 
                            class="btn-primary" invisible="state != 'done'"/>
                    <button string="Close" class="btn-secondary" special="cancel" data-hotkey="x"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>